<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MySwitch">
        <item name="colorControlActivated">@android:color/holo_green_light</item>
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="MyMainLayout">
        <item name="android:background">@drawable/main_layout_bg_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/constraintLayout_padding</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/textView_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layout_constraintVertical_bias">0</item>
    </style>

    <style name="MyButtonDefault">
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:layout_marginEnd">@dimen/button_layout_marginEnd</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:backgroundTint">@color/main_layout_background</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="MyButtonOperations" parent="@style/MyButtonDefault">
        <item name="android:textColor">@color/button_textColor2</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>
</resources>